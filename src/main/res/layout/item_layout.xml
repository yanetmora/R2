<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_product">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_product"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_name"
        android:layout_toRightOf="@id/iv_product"
        android:textSize="15pt"
        android:text="@string/product_name"
        />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_edit_product"
            android:layout_toRightOf="@+id/tv_product_name"
            android:src="@android:drawable/ic_menu_edit"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_delet_product"
            android:layout_toRightOf="@+id/tv_product_name"
            android:layout_below="@+id/bt_edit_product"
            android:src="@android:drawable/ic_menu_delete"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_price"
            android:layout_toRightOf="@id/iv_product"
            android:layout_below="@+id/tv_product_name"
            android:text="Product price"
            android:textSize="10pt"
            />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_stock"
        android:layout_toRightOf="@id/tv_product_price"
        android:layout_below="@+id/tv_product_name"
        android:text="@string/product_stock"
        android:textSize="10pt"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/bt_edit_product"
        android:layout_toStartOf="@+id/bt_edit_product"

        />
    </RelativeLayout>
</android.support.v7.widget.CardView>