<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_propertie">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_propertie"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_from_date"
            android:layout_toRightOf="@id/iv_propertie"
            android:textSize="15pt"
            android:text="Propertie"
            />


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_name_company"
            android:layout_toRightOf="@id/iv_propertie"
            android:layout_below="@+id/tv_from_date"
            android:text="Company Name"
            android:textSize="10pt"

            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_contac_name"
            android:layout_below="@+id/tv_name_company"
            android:text="Contac Name"
            android:textSize="10pt"
            android:layout_toRightOf="@id/iv_propertie"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_contac_title"
            android:layout_below="@+id/tv_contac_name"
            android:text="Contac Title"
            android:textSize="10pt"
            android:layout_toRightOf="@id/iv_propertie"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_address"
            android:layout_below="@+id/tv_contac_title"
            android:text="Address"
            android:textSize="10pt"
            android:layout_toRightOf="@id/iv_propertie"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_city"
            android:layout_below="@+id/tv_address"
            android:text="City"
            android:textSize="10pt"
            android:layout_toRightOf="@id/iv_propertie"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_region"
            android:layout_below="@+id/tv_city"
            android:text="Region"
            android:textSize="10pt"
            android:layout_toRightOf="@id/iv_propertie"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_cp"
            android:layout_below="@+id/tv_region"
            android:text="Codigo Postal"
            android:textSize="10pt"
            android:layout_toRightOf="@id/iv_propertie"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_pais"
            android:layout_below="@+id/tv_cp"
            android:text="Country"
            android:textSize="10pt"
            android:layout_toRightOf="@id/iv_propertie"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_phone"
            android:layout_below="@+id/tv_pais"
            android:text="Phone"
            android:textSize="10pt"
            android:layout_toRightOf="@id/iv_propertie"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_fax"
            android:layout_below="@+id/tv_phone"
            android:text="Fax"
            android:textSize="10pt"
            android:layout_toRightOf="@id/iv_propertie"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_edit_propertie"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_from_date"
            android:layout_toEndOf="@+id/tv_from_date" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_delete_propertie"
            android:layout_below="@+id/bt_edit_propertie"
            android:layout_toRightOf="@+id/tv_from_date"
            android:src="@android:drawable/ic_menu_delete"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>